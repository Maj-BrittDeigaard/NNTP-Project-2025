<Window x:Class="Nntp.Client.Wpf.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server settings" Height="260" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Server -->
        <TextBlock Text="Server" Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                 Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Port -->
        <TextBlock Text="Port" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                 Text="{Binding PortText, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Username -->
        <TextBlock Text="Username" Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Password -->
        <TextBlock Text="Password" Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"
                     PasswordChanged="PasswordBox_OnPasswordChanged"/>

        <!-- Status message -->
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Foreground="DimGray"
                   Text="{Binding StatusMessage}" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button Content="Load" Width="80" Margin="0,0,8,0" Click="Load_Click"/>
            <Button Content="Save" Width="80" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Close" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
